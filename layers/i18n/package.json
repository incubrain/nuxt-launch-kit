{
    "name": "@incubrain/i18n-layer",
    "version": "1.0.0",
    "description": "Enterprise-grade i18n layer for Nuxt applications - simplified and practical",
    "type": "module",
    "main": "./nuxt.config.ts",
    "exports": {
        ".": {
            "import": "./nuxt.config.ts"
        },
        "./components/*": "./app/components/*",
        "./composables/*": "./app/composables/*",
        "./types/*": "./types/*"
    },
    "files": [
        "app",
        "types",
        "locales",
        "nuxt.config.ts",
        "README.md"
    ],
    "scripts": {
        "dev": "nuxi prepare && nuxi dev playground",
        "build": "nuxi build playground",
        "preview": "nuxi preview playground",
        "lint": "eslint .",
        "test": "vitest",
        "release": "npm run lint && npm run test && npm publish"
    },
    "dependencies": {
        "@nuxtjs/i18n": "^10.0.4",
        "@nuxtjs/seo": "^3.1.0",
        "@vueuse/core": "^13.6.0"
    },
    "peerDependencies": {
        "nuxt": ">=3.12.0"
    },
    "devDependencies": {
        "@nuxt/eslint": "^1.8.0",
        "eslint": "^9.0.0",
        "nuxt": "^4.0.2",
        "vitest": "^3.2.4"
    },
    "keywords": [
        "nuxt",
        "nuxt4",
        "i18n",
        "internationalization",
        "layer",
        "components",
        "enterprise",
        "localization",
        "marathi",
        "english"
    ],
    "author": {
        "name": "Incubrain Team",
        "url": "https://incubrain.org"
    },
    "license": "MIT",
    "homepage": "https://github.com/incubrain/i18n-layer#readme",
    "repository": {
        "type": "git",
        "url": "https://github.com/incubrain/i18n-layer.git"
    },
    "bugs": {
        "url": "https://github.com/incubrain/i18n-layer/issues"
    }
}